<p><%= alert %></p>

<div>
  <div>
    <h1>
      List of all cities
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new city
    </h2>

    <form action="/insert_city" method="post">
      <div>
          <select name="query_country_id">
        <% Country.all.order(:name).each do |a_country| %>
        
        <option value="<%= a_country.id %>" >
       <%= a_country.name %>
        </option>

      <% end%>
       
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <input type="text" id="body_box" name="query_body">
      </div>

      <button>
        Create city
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Country
        </th>

        <th>
          Name
        </th>

        <th>
          User
        </th>

        <th>
          Description
        </th>

        <th>
          Details
        </th>

      </tr>

      <% @list_of_cities.each do |a_city| %>
      <tr>


        <td>
          <%= a_city.country.name %>
        </td>

        <td>
          <%= a_city.name %>
        </td>

        <td>
          <%= a_city.user.first_name%>
        </td>

        <td>
          <%= a_city.body %>
        </td>

        <td>
          <a href="/cities/<%= a_city.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
