<div>
  <div>
    <h1>
      List of all bookmarks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a New Bookmark
    </h2>

    <form action="/insert_bookmark" method="post">
      <div>
        <label for="country_id_box">
          Country
        </label>
        
        <select name="query_country_id">
        <% Country.all.order(:name).each do |a_country| %>
        
        <option value="<%= a_country.id %>" >
        <%= a_country.name %>
        </option>


        <% end %>
        </select>
      </div>

  

      <button>
        Bookmark this Country!
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>


        <th>
          Country
        </th>

        <th>
          User
        </th>

        <th>
          Bookmarked At
        </th>

        <th>
        Details
        </th>
      </tr>

      <% @list_of_bookmarks.each do |a_bookmark| %>
      <tr>


        <td>
          <%= a_bookmark.country.name %>
        </td>

        <td>
          <%= a_bookmark.user.first_name %>
        </td>

        <td>
          <%= time_ago_in_words(a_bookmark.created_at) %> ago
        </td>
     
        <td>
          <a href="/countries/<%= a_bookmark.country.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
